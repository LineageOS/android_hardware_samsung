cc_binary {
  name: "android.hardware.thermal@2.0-service.samsung",
  defaults: [
    "hidl_defaults",
  ],
  vendor: true,
  relative_install_path: "hw",
  vintf_fragments: ["android.hardware.thermal@2.0-service.samsung.xml"],
  init_rc: [
    "android.hardware.thermal@2.0-service.samsung.rc",
  ],
  srcs: [
    "service.cpp",
    "Thermal.cpp",
    "thermal-helper.cpp",
    "utils/config_parser.cpp",
    "utils/thermal_files.cpp",
    "utils/thermal_watcher.cpp",
  ],
  static_libs: [
    "libjsoncpp",
  ],
  shared_libs: [
    "libbase",
    "libcutils",
    "libhidlbase",
    "libutils",
    "android.hardware.thermal@1.0",
    "android.hardware.thermal@2.0",
  ],
  cflags: [
    "-Wall",
    "-Werror",
    "-Wextra",
    "-Wunused",
  ],
  tidy: true,
  tidy_checks: [
    "android-*",
    "cert-*",
    "clang-analyzer-security*",
  ],
  tidy_flags: [
    "-warnings-as-errors=android-*,clang-analyzer-security*,cert-*"
  ],
}

sh_binary {
  name: "thermal_logd.samsung",
  src: "init.thermal.logging.sh",
  vendor: true,
  init_rc: [
    "samsung-thermal-logd.rc",
  ],
}
